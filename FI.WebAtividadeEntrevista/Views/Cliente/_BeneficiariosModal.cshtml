<div class="modal-header position-relative">
    <h5 class="modal-title">Beneficiários</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position:absolute; top:18px; right:15px;">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body" id="formCadastroBeneficiario">
    <!-- FORM VISUAL (SEM <form>) -->
    <div class="row mb-4">

        <div class="col-md-5">
            <div class="form-group">
                <label for="CpfBeneficiario">CPF:</label>
                <input type="text"
                       class="form-control"
                       id="CpfBeneficiario"
                       placeholder="Ex.: 010.011.111-00"
                       maxlength="14"
                       oninput="aplicarMascaraCpf(this)">
            </div>
        </div>

        <div class="col-md-5">
            <div class="form-group">
                <label for="NomeBeneficiario">Nome:</label>
                <input type="text"
                       class="form-control"
                       id="NomeBeneficiario"
                       placeholder="Ex.: Maria"
                       maxlength="50">
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label>&nbsp;</label>
                <button type="button"
                        id="btnIncluirBeneficiario"
                        class="btn btn-success">
                    Incluir
                </button>
            </div>
        </div>

    </div>

    <!-- TABELA -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 25%">CPF</th>
                <th style="width: 45%">Nome</th>
                <th style="width: 30%">Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>000.000.001-91</td>
                <td>Beneficiário João</td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm mr-2">
                        Alterar
                    </button>
                    <button type="button" class="btn btn-primary btn-sm">
                        Excluir
                    </button>
                </td>
            </tr>
            <tr>
                <td>000.000.002-72</td>
                <td>Beneficiário José</td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm mr-2">
                        Alterar
                    </button>
                    <button type="button" class="btn btn-primary btn-sm">
                        Excluir
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

